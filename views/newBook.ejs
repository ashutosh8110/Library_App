<% include partials/header%>

<div class="background" style="background:url(https://images.unsplash.com/photo-1528459801416-a9e53bbf4e17?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1555&q=80)"></div>

<div class="row">
    <div class="container back-white col-xs-8 col-xs-offset-2 col-md-6 col-md-offset-3" >
        <h1 class="centerText">Add New Book</h1>
		<div style="width:80%;margin: 20px auto">
		<form action="/books" method="post">
			<div class="form-group">
				<input type="text" class="form-control" placeholder="Name of Book" name="Book[name]" required>
			</div>
			<div class="form-group">
				<input type="text" class="form-control" placeholder="Author of Book" name="Book[author]" required>
			</div>
			<div class="form-group">
				<input type="text" class="form-control" placeholder="Category" name="Book[category]" required>
			</div>
			<div class="form-group">
				<input type="number" class="form-control" placeholder="Number of Books" name="Book[number]" required>
			</div>
			<button type="submit" class="btn btn-lg btn-primary btn-block">Add Book</button>
		</form>
		</div>
	</div>
</div>
